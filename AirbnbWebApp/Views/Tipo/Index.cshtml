@using Airbnb.Core.Application.ViewModel.Tipos;
@model List<TipoViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Tipo" asp-action="Create" class="btn btn-success">Create Region</a>
        </div>
    </div>


    <div class="row">
        @if (Model == null || Model.Count == 0)
        {
            <h3>No hay Regiones Registradas</h3>
        }
        else
        {

            <div class="row align-items-center">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Cuantos Airbnb</th>

                            <th>Opción</th>
                        </tr>
                    </thead>
                    @foreach (TipoViewModel item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.HowManyAirbnb
                                </td>
                                <td>
                                    <a asp-controller="Tipo" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                    <a asp-controller="Tipo" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                </td>
                            </tr>
                        </tbody>

                    }
                </table>
            </div>

        }
    </div>
</div>

